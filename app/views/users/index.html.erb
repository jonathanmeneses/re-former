<h1>Users</h1>

<p>Our database has <%= User.count %> users!</p>

<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="flash <%= name %>">
            <%= msg %>
        </div>
        <% end %>
            <% end %>

                <ul>
                    <% @users.each do |user| %>
                        <li>
                            <%= link_to user.username, edit_user_path(user) %> - <%= user.email %>
                        </li>
                        <% end %>
                </ul>

                <%= link_to "New User" , new_user_path %>